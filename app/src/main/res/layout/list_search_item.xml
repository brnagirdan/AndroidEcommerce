<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/flower_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="desc"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/flower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/product_title"
        android:textSize="@dimen/product_title"
        android:layout_toRightOf="@+id/flower_pic"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/product_price"
        android:textColor="#222222"
        android:layout_alignLeft="@+id/flower_name"
        android:layout_below="@+id/flower_name"
         />

    <TextView
        android:id="@+id/kdv"
        android:text="+ KDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="#8E8D8D"
        android:layout_marginLeft="3dp"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/price"
        android:layout_toRightOf="@+id/price"
        android:layout_toEndOf="@+id/price"
        android:layout_marginStart="10dp" />
</RelativeLayout>