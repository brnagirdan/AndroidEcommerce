<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_province"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_province"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <include
            layout="@layout/province_appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/province_list"
        android:background="@color/white"
        android:layout_below="@+id/appbar_province"
        android:orientation="vertical" >
      <ListView
            android:id="@+id/list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </ListView>
    </LinearLayout>
    <TextView
        android:textColor="#403F3F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sonucyok"
        android:text="Üzgünüz, aradığınız sonucu bulamadık.."
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        android:visibility="invisible"
        android:layout_below="@+id/appbar_province"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
