<RelativeLayout android:layout_height="56dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/geri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@drawable/back"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="56dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/geri"
                    android:layout_height="56dp"
                    android:gravity="center_vertical">

                    <Button
                        android:layout_centerVertical="true"
                        android:id="@+id/city_btn"
                        android:layout_weight="1"
                        android:background="@drawable/select_province"
                        android:drawableRight="@mipmap/cancel"
                        android:text="İzmir"
                        android:paddingLeft="-5dp"
                        android:paddingRight="5dp"
                        android:textColor="#00a000"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_centerVertical="true"
                        android:hint="İlçe veya semt ara"
                        android:textColorHint="#8E8D8D"
                        android:background="@drawable/searchprovince_bg"
                        android:id="@+id/searchtext"
                        android:textColor="@color/product_title"
                        android:textSize="17dp"
                        android:layout_marginRight="10dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>


</RelativeLayout>
