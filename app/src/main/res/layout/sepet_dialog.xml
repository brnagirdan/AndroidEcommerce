        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="14dp"
        android:fontFamily="sans-serif" />

    <LinearLayout
